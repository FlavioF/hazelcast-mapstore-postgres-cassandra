<persistence
  xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="2.0">
  <persistence-unit
    name="postgres_test"
    transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.fferreira.example.hazelcast.mapstore.EntryEntity</class>
    <properties>
      <property name="javax.persistence.jdbc.servername" value="localhost" />
      <property name="javax.persistence.jdbc.portnumber" value="5432" />
      <property name="javax.persistence.jdbc.databasename" value="yourpostgresdb" />      
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/yourpostgresdb" />      
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
      <property name="javax.persistence.jdbc.user" value="yourpostgresuser" />
      <property name="javax.persistence.jdbc.password" value="yourpassword" />
      <property name="hibernate.id.new_generator_mappings" value="true" />
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL82Dialect" />
      <property name="hibernate.archive.autodetection" value="class" />
      <property name="hibernate.show_sql" value="true" />
      <property name="hibernate.format_sql" value="true" />
      <property name="hibernate.hbm2ddl.auto" value="create" />      
    </properties>
  </persistence-unit>
</persistence>
